  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python: Generate table dataset 8",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "args": ["-g", "8"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["-g", "8"],
    },
    {
      "name": "Python: import news group data",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["import-data", "-p", "~/data/20_newsgroups/", "-s"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Show dataset",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["show-datasets"],
      "console": "externalTerminal"
    }
  ]
}
